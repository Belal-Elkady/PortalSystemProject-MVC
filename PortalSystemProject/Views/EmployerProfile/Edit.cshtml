@model BL.Dtos.EmployerProfileDto

@{
    ViewData["Title"] = "Edit Employer Profile";
}

<div class="container mt-4 col-md-8">

    <div class="card shadow">
        <div class="card-header bg-warning text-dark">
            <h4><i class="bi bi-pencil-square"></i> Edit Employer Profile</h4>
        </div>
        <div class="card-body">
            <form asp-action="Edit">
                <input type="hidden" asp-for="UserId" />
                <div class="mb-3">
                    <label asp-for="CompanyId" class="form-label fw-bold"></label>
                    <select asp-for="CompanyId" class="form-select" asp-items="ViewBag.Companies">
                        <option value="">-- Select Company --</option>
                    </select>
                </div>
                <div class="mb-3">
                    <label asp-for="JobTitle" class="form-label fw-bold"></label>
                    <input asp-for="JobTitle" class="form-control" />
                </div>
                <div class="d-flex justify-content-between">
                    <a asp-action="Index" class="btn btn-secondary"><i class="bi bi-arrow-left"></i> Back</a>
                    <button type="submit" class="btn btn-warning"><i class="bi bi-save"></i> Update</button>
                </div>
            </form>
        </div>
    </div>
</div>
