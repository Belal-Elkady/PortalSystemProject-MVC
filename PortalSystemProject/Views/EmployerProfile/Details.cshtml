@model BL.Dtos.EmployerProfileDto
@{
    ViewData["Title"] = "Employer Profile Details";
}

<div class="container mt-4 col-md-8">
    <div class="card shadow">
        <div class="card-header bg-info text-white">
            <h4><i class="bi bi-person-vcard"></i> @Model.FullName</h4>
        </div>
        <div class="card-body">
            <p><strong>Company:</strong> @Model.CompanyName</p>
            <p><strong>Position:</strong> @Model.JobTitle</p>
            <p><strong>Phone:</strong> @Model.Phone</p>
            <p><strong>User ID:</strong> @Model.UserId</p>

            <div class="d-flex justify-content-between mt-4">
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="bi bi-arrow-left"></i> Back
                </a>
                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">
                    <i class="bi bi-pencil"></i> Edit
                </a>
            </div>
        </div>
    </div>
</div>
