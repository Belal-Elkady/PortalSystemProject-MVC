@model BL.Dtos.EmployerProfileDto
@{
    ViewData["Title"] = "Create Employer Profile";
}

<div class="container mt-4 col-md-8">
    <div class="card shadow">
        <div class="card-header bg-primary text-white">
            <h4><i class="bi bi-plus-circle"></i> Create Employer Profile</h4>
        </div>
        <div class="card-body">
            <form asp-action="Create">
                @Html.AntiForgeryToken()

                <div class="mb-3">
                    <label asp-for="FullName" class="form-label fw-bold"></label>
                    <input asp-for="FullName" class="form-control" placeholder="Enter full name" />
                    <span asp-validation-for="FullName" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="JobTitle" class="form-label fw-bold"></label>
                    <input asp-for="JobTitle" class="form-control" placeholder="e.g. HR Manager" />
                    <span asp-validation-for="JobTitle" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="CompanyId" class="form-label fw-bold">Company</label>
                    <select asp-for="CompanyId" asp-items="ViewBag.Companies" class="form-select">
                        <option value="">-- Select Company --</option>
                    </select>
                    <span asp-validation-for="CompanyId" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Phone" class="form-label fw-bold"></label>
                    <input asp-for="Phone" class="form-control" placeholder="+20 1X XXX XXXX" />
                    <span asp-validation-for="Phone" class="text-danger"></span>
                </div>

                <div class="d-flex justify-content-between">
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="bi bi-arrow-left-circle"></i> Back
                    </a>
                    <button type="submit" class="btn btn-success">
                        <i class="bi bi-save"></i> Save
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
