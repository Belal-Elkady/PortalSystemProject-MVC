@model BL.Dtos.EmployerProfileDto

@{
    ViewData["Title"] = "Create Employer Profile";
}

<div class="container mt-4 col-md-8">
    <div class="card shadow">
        <div class="card-header bg-primary text-white">
            <h4><i class="bi bi-plus-circle"></i> Add Employer Profile</h4>
        </div>
        <div class="card-body">
            <form asp-action="Create">
                <div class="mb-3">
                    <label asp-for="CompanyId" class="form-label fw-bold"></label>
                    <select asp-for="CompanyId" class="form-select" asp-items="ViewBag.Companies">
                        <option value="">-- Select Company --</option>
                    </select>
                </div>
                <div class="mb-3">
                    <label asp-for="JobTitle" class="form-label fw-bold"></label>
                    <input asp-for="JobTitle" class="form-control" />
                    <span asp-validation-for="JobTitle" class="text-danger"></span>
                </div>
                <div class="d-flex justify-content-between">
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="bi bi-arrow-left"></i> Back
                    </a>
                    <button type="submit" class="btn btn-success">
                        <i class="bi bi-save"></i> Save
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
