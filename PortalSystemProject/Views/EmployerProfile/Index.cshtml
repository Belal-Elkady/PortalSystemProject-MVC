@model IEnumerable<BL.Dtos.EmployerProfileDto>
@{
    Layout = "_Layout";
}
@{
    ViewData["Title"] = "My Employer Profile";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold text-primary">
            <i class="bi bi-person-workspace"></i> My Employer Profile
        </h2>
        @if (Model != null && Model.Any())
        {
            <a asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Create New Profile
            </a>
        }
    </div>

    <!-- ✅ Success / Error Messages -->
    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle-fill me-2"></i>@TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-triangle-fill me-2"></i>@TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (Model == null || !Model.Any())
    {
        <!-- Empty State -->
        <div class="card border-0 shadow-sm">
            <div class="card-body text-center py-5">
                <div class="mb-4">
                    <i class="bi bi-person-plus" style="font-size: 4rem; color: #0d6efd;"></i>
                </div>
                <h4 class="mb-3">No Employer Profile Found</h4>
                <p class="text-muted mb-4">
                    You don't have an employer profile yet. Create one to start posting jobs and managing applications.
                </p>
                <a asp-action="Create" class="btn btn-primary btn-lg">
                    <i class="bi bi-plus-circle me-2"></i>Create Your Profile
                </a>
            </div>
        </div>
    }
    else
    {
        <!-- Desktop Table View -->
        <div class="card border-0 shadow-sm d-none d-md-block">
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead class="table-light">
                            <tr>
                                <th class="px-4 py-3">
                                    <i class="bi bi-person me-2"></i>Full Name
                                </th>
                                <th class="py-3">
                                    <i class="bi bi-building me-2"></i>Company
                                </th>
                                <th class="py-3">
                                    <i class="bi bi-briefcase me-2"></i>Position
                                </th>
                                <th class="py-3">
                                    <i class="bi bi-telephone me-2"></i>Phone
                                </th>
                                <th class="text-end px-4 py-3">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var emp in Model)
                            {
                                <tr>
                                    <td class="px-4 py-3 fw-semibold">
                                        @(emp.FullName ?? "N/A")
                                    </td>
                                    <td class="py-3">
                                        @if (!string.IsNullOrEmpty(emp.CompanyName))
                                        {
                                            <span class="badge bg-light text-dark border">
                                                @emp.CompanyName
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="text-muted">No Company</span>
                                        }
                                    </td>
                                    <td class="py-3">
                                        @(emp.JobTitle ?? "N/A")
                                    </td>
                                    <td class="py-3">
                                        @if (!string.IsNullOrEmpty(emp.Phone))
                                        {
                                            <a href="tel:@emp.Phone" class="text-decoration-none">
                                                @emp.Phone
                                            </a>
                                        }
                                        else
                                        {
                                            <span class="text-muted">N/A</span>
                                        }
                                    </td>
                                    <td class="text-end px-4 py-3">
                                        <div class="btn-group" role="group">
                                            <a asp-action="Details"
                                               asp-route-id="@emp.Id"
                                               class="btn btn-sm btn-outline-info"
                                               title="View Details">
                                                <i class="bi bi-eye"></i>
                                            </a>
                                            <a asp-action="Edit"
                                               asp-route-id="@emp.Id"
                                               class="btn btn-sm btn-outline-warning"
                                               title="Edit Profile">
                                                <i class="bi bi-pencil"></i>
                                            </a>
                                            <a asp-action="Delete"
                                               asp-route-id="@emp.Id"
                                               class="btn btn-sm btn-outline-danger"
                                               title="Delete Profile">
                                                <i class="bi bi-trash"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <!-- Mobile Card View -->
        <div class="d-md-none">
            @foreach (var emp in Model)
            {
                <div class="card border-0 shadow-sm mb-3">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-start mb-3">
                            <h5 class="card-title mb-0 fw-bold">
                                @(emp.FullName ?? "N/A")
                            </h5>
                            @if (!string.IsNullOrEmpty(emp.CompanyName))
                            {
                                <span class="badge bg-primary">@emp.CompanyName</span>
                            }
                        </div>

                        <div class="mb-2">
                            <small class="text-muted">
                                <i class="bi bi-briefcase me-1"></i>Position:
                            </small>
                            <span class="ms-2">@(emp.JobTitle ?? "N/A")</span>
                        </div>

                        <div class="mb-3">
                            <small class="text-muted">
                                <i class="bi bi-telephone me-1"></i>Phone:
                            </small>
                            @if (!string.IsNullOrEmpty(emp.Phone))
                            {
                                <a href="tel:@emp.Phone" class="ms-2 text-decoration-none">
                                    @emp.Phone
                                </a>
                            }
                            else
                            {
                                <span class="ms-2 text-muted">N/A</span>
                            }
                        </div>

                        <div class="d-flex gap-2">
                            <a asp-action="Details"
                               asp-route-id="@emp.Id"
                               class="btn btn-sm btn-outline-info flex-fill">
                                <i class="bi bi-eye me-1"></i>View
                            </a>
                            <a asp-action="Edit"
                               asp-route-id="@emp.Id"
                               class="btn btn-sm btn-outline-warning flex-fill">
                                <i class="bi bi-pencil me-1"></i>Edit
                            </a>
                            <a asp-action="Delete"
                               asp-route-id="@emp.Id"
                               class="btn btn-sm btn-outline-danger flex-fill">
                                <i class="bi bi-trash me-1"></i>Delete
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>

        <!-- Profile Count -->
        <div class="mt-3 text-muted">
            <small>
                <i class="bi bi-info-circle me-1"></i>
                Showing @Model.Count() profile@(Model.Count() != 1 ? "s" : "")
            </small>
        </div>
    }
</div>

@section Scripts {
    <script>
        // Auto-dismiss alerts after 5 seconds
        document.addEventListener('DOMContentLoaded', function() {
            const alerts = document.querySelectorAll('.alert-dismissible');
            alerts.forEach(alert => {
                setTimeout(() => {
                    const bsAlert = new bootstrap.Alert(alert);
                    bsAlert.close();
                }, 5000);
            });
        });
    </script>
}