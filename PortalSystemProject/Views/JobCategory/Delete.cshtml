@model BL.Dtos.JobCategoryDto
@{
    Layout = "_Layout";
}
@{
    ViewData["Title"] = "Delete Job Category";
}

<div class="container mt-4">
    <h2><i class="bi bi-trash"></i> Delete Job Category</h2>
    <hr />

    <div class="alert alert-warning">
        <strong>Warning!</strong> Are you sure you want to delete this category?
    </div>

    <dl class="row">
        <dt class="col-sm-3">Name</dt>
        <dd class="col-sm-9">@Model.Name</dd>

        <dt class="col-sm-3">Created By</dt>
        <dd class="col-sm-9">@Model.CreatedByUserName</dd>

        <dt class="col-sm-3">Created At</dt>
        <dd class="col-sm-9">@Model.CreatedAt.ToString("dd MMM yyyy")</dd>
    </dl>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger"><i class="bi bi-trash"></i> Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
