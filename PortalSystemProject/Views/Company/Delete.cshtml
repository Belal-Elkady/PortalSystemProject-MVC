@model BL.Dtos.CompanyDto

@{
    ViewData["Title"] = "Delete Company";
}

<div class="container mt-4 col-md-8">
    <div class="card shadow">
        <div class="card-header bg-danger text-white">
            <h4><i class="bi bi-trash"></i> Delete Company</h4>
        </div>
        <div class="card-body">
            <h5>Are you sure you want to delete <strong>@Model.Name</strong>?</h5>
            <p><strong>Location:</strong> @Model.City, @Model.Country</p>

            <form asp-action="Delete" method="post">
                <input type="hidden" asp-for="Id" />
                <div class="d-flex justify-content-between mt-3">
                    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
                    <button type="submit" class="btn btn-danger">Confirm Delete</button>
                </div>
            </form>
        </div>
    </div>
</div>
