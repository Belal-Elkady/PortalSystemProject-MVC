@model IEnumerable<BL.Dtos.CompanyDto>
@{
    Layout = "_Layout";
}
@{
    ViewData["Title"] = "Companies";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2><i class="bi bi-building"></i> Companies</h2>
        <a asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Add New Company
        </a>
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-info text-center">No companies found.</div>
    }
    else
    {
        <table class="table table-bordered table-hover shadow-sm">
            <thead class="table-light">
                <tr>
                    <th>Name</th>
                    <th>Location</th>
                    <th>Status</th>
                    <th>Created At</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var company in Model)
                {
                    <tr>
                        <td>@company.Name</td>
                        <td>@($"{company.City}, {company.Country}")</td>
                        <td>
                            @if (company.Status == Domains.CompanyStatus.Approved)
                            {
                                <span class="badge bg-success">Approved</span>
                            }
                            else if (company.Status == Domains.CompanyStatus.Pending)
                            {
                                <span class="badge bg-warning text-dark">Pending</span>
                            }
                            else
                            {
                                <span class="badge bg-danger">Rejected</span>
                            }
                        </td>
                        <td>@company.CreatedAt.ToShortDateString()</td>
                        <td>
                            <div class="btn-group">
                                <a asp-action="Details" asp-route-id="@company.Id" class="btn btn-info btn-sm">
                                    <i class="bi bi-eye"></i>
                                </a>
                                <a asp-action="Edit" asp-route-id="@company.Id" class="btn btn-warning btn-sm">
                                    <i class="bi bi-pencil"></i>
                                </a>
                                <a asp-action="Delete" asp-route-id="@company.Id" class="btn btn-danger btn-sm">
                                    <i class="bi bi-trash"></i>
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>
