@model BL.Dtos.CompanyDto
@{
    Layout = "_Layout";
}
@{
    ViewData["Title"] = "Company Details";
}

<div class="container mt-4 col-md-8">
    <div class="card shadow">
        <div class="card-header bg-info text-white">
            <h4><i class="bi bi-building"></i> @Model.Name</h4>
        </div>
        <div class="card-body">
            <p><strong>Website:</strong> <a href="@Model.Website" target="_blank">@Model.Website</a></p>
            <p><strong>Location:</strong> @Model.City, @Model.Country</p>
            <p><strong>Description:</strong> @Model.Description</p>
            <p><strong>Created At:</strong> @Model.CreatedAt.ToShortDateString()</p>
            <p>
                <strong>Status:</strong>
                @if (Model.Status == Domains.CompanyStatus.Approved)
                {
                    <span class="badge bg-success">Approved</span>
                }
                else if (Model.Status == Domains.CompanyStatus.Pending)
                {
                    <span class="badge bg-warning text-dark">Pending</span>
                }
                else
                {
                    <span class="badge bg-danger">Rejected</span>
                }
            </p>

            @if (!string.IsNullOrEmpty(Model.LogoUrl))
            {
                <div class="mt-3">
                    <img src="@Model.LogoUrl" alt="@Model.Name Logo" class="img-thumbnail" style="max-height: 150px;" />
                </div>
            }

            <div class="d-flex justify-content-between mt-4">
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="bi bi-arrow-left-circle"></i> Back
                </a>
                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">
                    <i class="bi bi-pencil"></i> Edit
                </a>
            </div>
        </div>
    </div>
</div>
