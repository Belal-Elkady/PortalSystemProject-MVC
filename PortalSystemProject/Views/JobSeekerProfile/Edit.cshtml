@model BL.Dtos.JobSeekerProfileDto
@{
    ViewData["Title"] = "Edit Job Seeker";
}

<div class="container mt-4 col-md-8">
    <div class="card shadow">
        <div class="card-header bg-warning text-dark">
            <h4><i class="bi bi-pencil-square"></i> Edit Job Seeker</h4>
        </div>
        <div class="card-body">
            <form asp-action="Edit" method="post">
                <div asp-validation-summary="All" class="text-danger"></div>

                <input type="hidden" asp-for="Id" />

                <div class="mb-3">
                    <label asp-for="Headline" class="form-label fw-bold"></label>
                    <input asp-for="Headline" class="form-control" />
                </div>

                <div class="mb-3">
                    <label asp-for="Summary" class="form-label fw-bold"></label>
                    <textarea asp-for="Summary" class="form-control" rows="4"></textarea>
                </div>

                <div class="row mb-3">
                    <div class="col-md-6">
                        <label asp-for="Country" class="form-label fw-bold"></label>
                        <input asp-for="Country" class="form-control" />
                    </div>
                    <div class="col-md-6">
                        <label asp-for="City" class="form-label fw-bold"></label>
                        <input asp-for="City" class="form-control" />
                    </div>
                </div>

                <div class="mb-3">
                    <label asp-for="YearsOfExperience" class="form-label fw-bold"></label>
                    <input asp-for="YearsOfExperience" class="form-control" type="number" min="0" />
                </div>

                <div class="d-flex justify-content-between">
                    <a asp-action="Index" class="btn btn-secondary"><i class="bi bi-arrow-left"></i> Back</a>
                    <button type="submit" class="btn btn-warning"><i class="bi bi-save"></i> Update</button>
                </div>
            </form>
        </div>
    </div>
</div>
