@model IEnumerable<BL.Dtos.JobSeekerProfileDto>
@{
    Layout = "_Layout";
}
@{
    ViewData["Title"] = "Job Seekers";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="fw-bold text-primary"><i class="bi bi-person-badge"></i> Job Seekers</h2>
        <a asp-action="Create" class="btn btn-success">
            <i class="bi bi-plus-circle"></i> Add Seeker
        </a>
    </div>

    <table class="table table-striped table-hover shadow-sm">
        <thead class="table-dark">
            <tr>
                <th>Headline</th>
                <th>Country</th>
                <th>City</th>
                <th>Experience (Years)</th>
                <th>Created</th>
                <th class="text-end">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var s in Model)
            {
                <tr>
                    <td>@s.Headline</td>
                    <td>@s.Country</td>
                    <td>@s.City</td>
                    <td>@(s.YearsOfExperience ?? 0)</td>
                    <td>@s.CreatedAt.ToShortDateString()</td>
                    <td class="text-end">
                        <a asp-action="Details" asp-route-id="@s.Id" class="btn btn-outline-info btn-sm"><i class="bi bi-eye"></i></a>
                        <a asp-action="Edit" asp-route-id="@s.Id" class="btn btn-outline-warning btn-sm"><i class="bi bi-pencil"></i></a>
                        <a asp-action="Delete" asp-route-id="@s.Id" class="btn btn-outline-danger btn-sm"><i class="bi bi-trash"></i></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
