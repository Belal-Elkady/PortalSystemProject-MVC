@model BL.Dtos.ApplicationDto
@{
    ViewData["Title"] = "Application Details";
}

<div class="container mt-4 col-md-8">
    <div class="card shadow">
        <div class="card-header bg-info text-white">
            <h4><i class="bi bi-file-text"></i> Application Details</h4>
        </div>
        <div class="card-body">
            <p><strong>Job Post ID:</strong> @Model.JobPostId</p>
            <p><strong>Job Seeker ID:</strong> @Model.JobSeekerId</p>
            <p><strong>Applied At:</strong> @Model.AppliedAt.ToString("yyyy-MM-dd")</p>
            <p><strong>Status:</strong> @Model.Status</p>
            <p><strong>Cover Letter:</strong></p>
            <div class="border rounded p-3 bg-light">@Model.CoverLetter</div>

            <div class="d-flex justify-content-between mt-4">
                <a asp-action="MyApplications" class="btn btn-secondary">
                    <i class="bi bi-arrow-left-circle"></i> Back
                </a>
                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">
                    <i class="bi bi-pencil-square"></i> Edit
                </a>
            </div>
        </div>
    </div>
</div>
