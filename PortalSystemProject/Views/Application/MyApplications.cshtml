@model IEnumerable<BL.Dtos.ApplicationDto>
@{
    Layout = "_Layout";
}
@{
    ViewData["Title"] = "My Applications";
}

<div class="container mt-4">
    <h2 class="fw-bold text-primary mb-4"><i class="bi bi-briefcase"></i> My Applications</h2>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success">@TempData["Success"]</div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger">@TempData["Error"]</div>
    }

    @if (!Model.Any())
    {
        <div class="alert alert-info text-center">
            <i class="bi bi-info-circle"></i> You haven’t applied for any jobs yet.
        </div>
    }
    else
    {
        <table class="table table-striped table-hover shadow-sm">
            <thead class="table-dark">
                <tr>
                    <th>Job Post ID</th>
                    <th>Applied Date</th>
                    <th>Status</th>
                    <th>Cover Letter</th>
                    <th class="text-end">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var app in Model)
                {
                    string statusBadge = app.Status switch
                    {
                        0 => "badge bg-secondary text-white",
                        1 => "badge bg-info text-dark",
                        2 => "badge bg-success text-white",
                        3 => "badge bg-danger text-white",
                        _ => "badge bg-light text-dark"
                    };

                    string statusText = app.Status switch
                    {
                        0 => "Pending",
                        1 => "Reviewed",
                        2 => "Accepted",
                        3 => "Rejected",
                        _ => "Unknown"
                    };

                    <tr>
                        <td>@app.JobPostId</td>
                        <td>@app.AppliedAt.ToShortDateString()</td>
                        <td><span class="@statusBadge">@statusText</span></td>
                        <td>@(string.IsNullOrEmpty(app.CoverLetter) ? "-" : app.CoverLetter.Substring(0, Math.Min(app.CoverLetter.Length, 50)) + "...")</td>
                        <td class="text-end">
                            <a asp-action="Details" asp-route-id="@app.Id" class="btn btn-outline-info btn-sm">
                                <i class="bi bi-eye"></i> View
                            </a>
                            <a asp-action="Edit" asp-route-id="@app.Id" class="btn btn-outline-warning btn-sm">
                                <i class="bi bi-pencil"></i> Edit
                            </a>
                            <a asp-action="Delete" asp-route-id="@app.Id" class="btn btn-outline-danger btn-sm">
                                <i class="bi bi-trash"></i> Delete
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>
