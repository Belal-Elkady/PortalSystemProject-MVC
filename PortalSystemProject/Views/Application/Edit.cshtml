@model BL.Dtos.ApplicationDto

@{
    ViewData["Title"] = "Edit Application";
}

<div class="container mt-4 col-md-8">
    <div class="card shadow">
        <div class="card-header bg-warning text-dark">
            <h4><i class="bi bi-pencil-square"></i> Edit Application</h4>
        </div>
        <div class="card-body">
            <form asp-action="Edit" method="post">
                <input type="hidden" asp-for="Id" />

                <div class="mb-3">
                    <label asp-for="JobPostId" class="form-label fw-bold">Job Post</label>
                    <select asp-for="JobPostId" class="form-select" asp-items="ViewBag.JobPosts"></select>
                </div>

                <div class="mb-3">
                    <label asp-for="JobSeekerId" class="form-label fw-bold">Job Seeker</label>
                    <select asp-for="JobSeekerId" class="form-select" asp-items="ViewBag.JobSeekers"></select>
                </div>

                <div class="mb-3">
                    <label asp-for="CoverLetter" class="form-label fw-bold"></label>
                    <textarea asp-for="CoverLetter" class="form-control" rows="5"></textarea>
                </div>

                <div class="mb-3">
                    <label asp-for="Status" class="form-label fw-bold"></label>
                    <input asp-for="Status" class="form-control" type="number" min="0" max="6" />
                    <span class="form-text text-muted">0 = Pending, 1 = Reviewed, 2 = Accepted, etc.</span>
                </div>

                <div class="d-flex justify-content-between">
                    <a asp-action="Index" class="btn btn-secondary"><i class="bi bi-arrow-left"></i> Back</a>
                    <button type="submit" class="btn btn-warning"><i class="bi bi-save"></i> Update</button>
                </div>
            </form>
        </div>
    </div>
</div>
