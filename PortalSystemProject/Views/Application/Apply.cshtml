@model BL.Dtos.ApplicationDto
@{
    Layout = "_Layout";
}
@{
    ViewData["Title"] = "Apply for Job";
}

<div class="container mt-4 col-md-8">
    <div class="card shadow-lg">
        <div class="card-header bg-primary text-white">
            <h4><i class="bi bi-send"></i> Apply for @ViewBag.JobPostTitle</h4>
        </div>
        <div class="card-body">

            @if (TempData["Success"] != null)
            {
                <div class="alert alert-success">@TempData["Success"]</div>
            }
            @if (TempData["Error"] != null)
            {
                <div class="alert alert-danger">@TempData["Error"]</div>
            }

            <form asp-action="Apply" method="post">
                @Html.AntiForgeryToken()
                <input type="hidden" asp-for="JobPostId" />

                <div class="mb-3">
                    <label asp-for="CoverLetter" class="form-label fw-bold">Cover Letter</label>
                    <textarea asp-for="CoverLetter" class="form-control" rows="5"
                              placeholder="Write a brief cover letter..."></textarea>
                    <span asp-validation-for="CoverLetter" class="text-danger"></span>
                </div>

                <div class="d-flex justify-content-between mt-4">
                    <a asp-controller="JobPost" asp-action="Index" class="btn btn-secondary">
                        <i class="bi bi-arrow-left-circle"></i> Back to Jobs
                    </a>
                    <button type="submit" class="btn btn-success">
                        <i class="bi bi-send"></i> Submit Application
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
