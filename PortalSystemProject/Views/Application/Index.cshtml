@model IEnumerable<BL.Dtos.ApplicationDto>
@{
    Layout = "_Layout";
}
@{
    ViewData["Title"] = "Applications";
}
<div class="container mt-4">
    <h2 class="fw-bold text-primary mb-3"><i class="bi bi-file-earmark-text"></i> Applications</h2>
    <a asp-action="Create" class="btn btn-success mb-3"><i class="bi bi-plus-circle"></i> Add Application</a>

    <table class="table table-hover table-bordered shadow-sm">
        <thead class="table-dark">
            <tr>
                <th>Job Post</th>
                <th>Job Seeker</th>
                <th>Status</th>
                <th>Applied</th>
                <th>Updated</th>
                <th class="text-end">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var app in Model)
            {
                <tr>
                    <td>@app.JobPostId</td>
                    <td>@app.JobSeekerId</td>
                    <td>@app.Status</td>
                    <td>@app.AppliedAt.ToShortDateString()</td>
                    <td>@app.UpdatedAt?.ToShortDateString()</td>
                    <td class="text-end">
                        <a asp-action="Details" asp-route-id="@app.Id" class="btn btn-outline-info btn-sm"><i class="bi bi-eye"></i></a>
                        <a asp-action="Edit" asp-route-id="@app.Id" class="btn btn-outline-warning btn-sm"><i class="bi bi-pencil"></i></a>
                        <a asp-action="Delete" asp-route-id="@app.Id" class="btn btn-outline-danger btn-sm"><i class="bi bi-trash"></i></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
