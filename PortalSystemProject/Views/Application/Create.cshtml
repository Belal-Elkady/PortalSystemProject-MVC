@model BL.Dtos.ApplicationDto

@{
    ViewData["Title"] = "Create Application";
}

<div class="container mt-4 col-md-8">
    <div class="card shadow">
        <div class="card-header bg-success text-white">
            <h4><i class="bi bi-plus-circle"></i> Create Application</h4>
        </div>
        <div class="card-body">
            <form asp-action="Create" method="post">
                <div class="mb-3">
                    <label asp-for="JobPostId" class="form-label fw-bold">Job Post</label>
                    <select asp-for="JobPostId" class="form-select" asp-items="ViewBag.JobPosts">
                        <option value="">-- Select Job Post --</option>
                    </select>
                    <span asp-validation-for="JobPostId" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="JobSeekerId" class="form-label fw-bold">Job Seeker</label>
                    <select asp-for="JobSeekerId" class="form-select" asp-items="ViewBag.JobSeekers">
                        <option value="">-- Select Job Seeker --</option>
                    </select>
                    <span asp-validation-for="JobSeekerId" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="CoverLetter" class="form-label fw-bold">Cover Letter</label>
                    <textarea asp-for="CoverLetter" class="form-control" rows="5" placeholder="Write a short message..."></textarea>
                    <span asp-validation-for="CoverLetter" class="text-danger"></span>
                </div>

                <div class="d-flex justify-content-between">
                    <a asp-action="Index" class="btn btn-secondary"><i class="bi bi-arrow-left"></i> Back</a>
                    <button type="submit" class="btn btn-success"><i class="bi bi-save"></i> Save</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
