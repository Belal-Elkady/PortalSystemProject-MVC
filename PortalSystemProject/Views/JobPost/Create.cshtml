@model BL.Dtos.JobPostDto
@{
    ViewData["Title"] = "Create Job Post";
}

<div class="container mt-4 col-md-10">
    <div class="card shadow">
        <div class="card-header bg-primary text-white">
            <h4><i class="bi bi-plus-circle"></i> Add New Job</h4>
        </div>
        <div class="card-body">
            <form asp-action="Create">
                <div class="row mb-3">
                    <div class="col-md-6">
                        <label asp-for="Title" class="form-label fw-bold"></label>
                        <input asp-for="Title" class="form-control" />
                        <span asp-validation-for="Title" class="text-danger"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="CompanyId" class="form-label fw-bold"></label>
                        <select asp-for="CompanyId" class="form-select" asp-items="ViewBag.Companies">
                            <option value="">-- Select Company --</option>
                        </select>
                    </div>
                </div>

                <div class="mb-3">
                    <label asp-for="Description" class="form-label fw-bold"></label>
                    <textarea asp-for="Description" class="form-control" rows="4"></textarea>
                </div>

                <div class="row mb-3">
                    <div class="col-md-6">
                        <label asp-for="JobCategoryId" class="form-label fw-bold"></label>
                        <select asp-for="JobCategoryId" class="form-select" asp-items="ViewBag.JobCategories">
                            <option value="">-- Select Category --</option>
                        </select>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="JobTypeId" class="form-label fw-bold"></label>
                        <select asp-for="JobTypeId" class="form-select" asp-items="ViewBag.JobTypes">
                            <option value="">-- Select Type --</option>
                        </select>
                    </div>
                </div>

                <div class="row mb-3">
                    <div class="col-md-6">
                        <label asp-for="Country" class="form-label fw-bold"></label>
                        <input asp-for="Country" class="form-control" />
                    </div>
                    <div class="col-md-6">
                        <label asp-for="City" class="form-label fw-bold"></label>
                        <input asp-for="City" class="form-control" />
                    </div>
                </div>

                <div class="row mb-3">
                    <div class="col-md-6">
                        <label asp-for="MinSalary" class="form-label fw-bold"></label>
                        <input asp-for="MinSalary" class="form-control" />
                    </div>
                    <div class="col-md-6">
                        <label asp-for="MaxSalary" class="form-label fw-bold"></label>
                        <input asp-for="MaxSalary" class="form-control" />
                    </div>
                </div>

                <div class="d-flex justify-content-between">
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="bi bi-arrow-left-circle"></i> Back
                    </a>
                    <button type="submit" class="btn btn-success">
                        <i class="bi bi-save"></i> Save
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
