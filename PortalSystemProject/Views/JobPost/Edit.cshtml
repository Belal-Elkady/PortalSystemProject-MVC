@model BL.Dtos.JobPostDto
@{
    ViewData["Title"] = "Edit Job Post";
}

<div class="container mt-4 col-md-8">
    <h2><i class="bi bi-pencil"></i> Edit Job Post</h2>
    <hr />

    <form asp-action="Edit" asp-route-id="@Model.Id" method="post">
        <input type="hidden" asp-for="Id" />

        <div asp-validation-summary="All" class="text-danger"></div>

        <div class="mb-3">
            <label asp-for="Title" class="form-label fw-bold"></label>
            <input asp-for="Title" class="form-control" placeholder="Enter job title" />
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="CompanyId" class="form-label fw-bold">Company</label>
            <select asp-for="CompanyId" class="form-select" asp-items="ViewBag.Companies"></select>
            <span asp-validation-for="CompanyId" class="text-danger"></span>
        </div>

        <div class="row">
            <div class="col-md-6 mb-3">
                <label asp-for="JobCategoryId" class="form-label fw-bold">Category</label>
                <select asp-for="JobCategoryId" class="form-select" asp-items="ViewBag.JobCategories"></select>
                <span asp-validation-for="JobCategoryId" class="text-danger"></span>
            </div>
            <div class="col-md-6 mb-3">
                <label asp-for="JobTypeId" class="form-label fw-bold">Type</label>
                <select asp-for="JobTypeId" class="form-select" asp-items="ViewBag.JobTypes"></select>
                <span asp-validation-for="JobTypeId" class="text-danger"></span>
            </div>
        </div>

        <div class="mb-3">
            <label asp-for="Description" class="form-label fw-bold"></label>
            <textarea asp-for="Description" rows="4" class="form-control"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-warning">
            <i class="bi bi-pencil-square"></i> Update
        </button>
        <a asp-action="Index" class="btn btn-secondary ms-2"><i class="bi bi-arrow-left"></i> Back</a>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
