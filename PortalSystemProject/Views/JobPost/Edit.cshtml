@model BL.Dtos.JobPostDto
@{
    ViewData["Title"] = "Edit Job Post";
}

<div class="container mt-4 col-md-10">
    <div class="card shadow">
        <div class="card-header bg-warning text-dark">
            <h4><i class="bi bi-pencil-square"></i> Edit Job</h4>
        </div>
        <div class="card-body">
            <form asp-action="Edit">
                <input type="hidden" asp-for="Id" />
                @Html.Partial("Create", Model) <!-- reuse form if desired -->
            </form>
        </div>
    </div>
</div>
