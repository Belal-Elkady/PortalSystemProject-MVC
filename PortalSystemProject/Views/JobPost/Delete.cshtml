@model BL.Dtos.JobPostDto
@{
    ViewData["Title"] = "Delete Job Post";
}

<div class="container mt-4 col-md-8">
    <div class="alert alert-warning">
        <h4><i class="bi bi-exclamation-triangle"></i> Are you sure you want to delete this job?</h4>
    </div>

    <dl class="row">
        <dt class="col-sm-3">Title</dt>
        <dd class="col-sm-9">@Model.Title</dd>

        <dt class="col-sm-3">Company</dt>
        <dd class="col-sm-9">@Model.CompanyName</dd>

        <dt class="col-sm-3">Location</dt>
        <dd class="col-sm-9">@($"{Model.City}, {Model.Country}")</dd>

        <dt class="col-sm-3">Posted</dt>
        <dd class="col-sm-9">@Model.PublishedAt.ToShortDateString()</dd>
    </dl>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger"><i class="bi bi-trash"></i> Delete</button>
        <a asp-action="Index" class="btn btn-secondary ms-2"><i class="bi bi-arrow-left"></i> Cancel</a>
    </form>
</div>
