@model BL.Dtos.JobPostDto
@{
    Layout = "_Layout";
}
@{
    ViewData["Title"] = "Job Details";
}

<div class="container mt-4 col-md-8">
    <div class="card shadow">
        <div class="card-header bg-primary text-white">
            <h4><i class="bi bi-info-circle"></i> @Model.Title</h4>
        </div>
        <div class="card-body">
            <p><strong>Company:</strong> @Model.CompanyName</p>
            <p><strong>Category:</strong> @Model.JobCategoryName</p>
            <p><strong>Type:</strong> @Model.JobTypeName</p>
            <p><strong>Location:</strong> @Model.City, @Model.Country</p>
            <p><strong>Salary:</strong> @($"{Model.MinSalary:C0} - {Model.MaxSalary:C0}")</p>
            <p><strong>Description:</strong></p>
            <p>@Model.Description</p>
            <p><strong>Posted At:</strong> @Model.PublishedAt.ToShortDateString()</p>

            <a asp-action="Index" class="btn btn-secondary"><i class="bi bi-arrow-left"></i> Back</a>
        </div>
    </div>
</div>
